{
   "background": {
      "persistent": true,
      "scripts": [ "main.js" ]
   },
   "browser_action": {
      "default_icon": "myicons.png"
   },
   "description": "My Test Extension for Rainforest job checker",
   "externally_connectable": {
      "matches": [ "*://*" ]
   },
   "homepage_url": "https://github.com/sweeneyapps/JobCheckerForRainForest/",
  
   "manifest_version": 2,
   "name": "Rainforest Test Extension",
   
   "permissions": [ "cookies", "idle", "notifications", "tabs", "storage", "identity", "identity.email", "https://*/" ],
   "version": "1.0"
}
